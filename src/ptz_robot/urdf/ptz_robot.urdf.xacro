    <!-- Velocity controller plugins -->
    <!-- default topic is: /model/my_robot/joint/pan_joint/cmd_vel -->
    <!-- Pan velocity controller -->
    <plugin
      filename="ignition-gazebo-joint-controller-system"
      name="ignition::gazebo::systems::JointController">
      <joint_name>pan_joint</joint_name>
    </plugin>

    <!-- Tilt velocity controller -->
    <plugin
      filename="ignition-gazebo-joint-controller-system"
      name="ignition::gazebo::systems::JointController">
      <joint_name>tilt_joint</joint_name>
    </plugin>

    <!-- Zoom velocity controller -->
    <plugin
      filename="ignition-gazebo-joint-controller-system"
      name="ignition::gazebo::systems::JointController">
      <joint_name>zoom_joint</joint_name>
    </plugin>


    <!-- KEYBOARD CONTROLS -->
    <!-- STOP motion with 'S' key -->
    <plugin
      filename="ignition-gazebo-triggered-publisher-system"
      name="ignition::gazebo::systems::TriggeredPublisher">
      <input type="ignition.msgs.Int32" topic="/keyboard/keypress">
        <match field="data">83</match> <!-- 'S' -->
      </input>
      <output type="ignition.msgs.Double"
          topic="/model/my_robot/joint/pan_joint/cmd_vel">
        data: 0.0
      </output>
    </plugin>
    <plugin
      filename="ignition-gazebo-triggered-publisher-system"
      name="ignition::gazebo::systems::TriggeredPublisher">
      <input type="ignition.msgs.Int32" topic="/keyboard/keypress">
        <match field="data">83</match> <!-- 'S' -->
      </input>
      <output type="ignition.msgs.Double"
          topic="/model/my_robot/joint/tilt_joint/cmd_vel">
        data: 0.0
      </output>
    </plugin>
    <plugin
      filename="ignition-gazebo-triggered-publisher-system"
      name="ignition::gazebo::systems::TriggeredPublisher">
      <input type="ignition.msgs.Int32" topic="/keyboard/keypress">
        <match field="data">83</match> <!-- 'S' -->
      </input>
      <output type="ignition.msgs.Double"
          topic="/model/my_robot/joint/zoom_joint/cmd_vel">
        data: 0.0
      </output>
    </plugin>


    <!-- Pan LEFT  with left arrow -->
    <plugin
      filename="ignition-gazebo-triggered-publisher-system"
      name="ignition::gazebo::systems::TriggeredPublisher">
      <input type="ignition.msgs.Int32" topic="/keyboard/keypress">
        <match field="data">16777234</match>  <!-- 16777234 = left arrow -->
      </input>
      <output type="ignition.msgs.Double"
          topic="/model/my_robot/joint/pan_joint/cmd_vel">
        data: 1.0
      </output>
    </plugin>

    <!-- Pan RIGHT with right arrow -->
    <plugin
      filename="ignition-gazebo-triggered-publisher-system"
      name="ignition::gazebo::systems::TriggeredPublisher">
      <input type="ignition.msgs.Int32" topic="/keyboard/keypress">
        <match field="data">16777236</match>  <!-- 16777236 = right arrow -->
      </input>
      <output type="ignition.msgs.Double"
          topic="/model/my_robot/joint/pan_joint/cmd_vel">
        data: -1.0
      </output>
    </plugin>

    <!-- Tilt UP with up arrow -->
    <plugin
      filename="ignition-gazebo-triggered-publisher-system"
      name="ignition::gazebo::systems::TriggeredPublisher">
      <input type="ignition.msgs.Int32" topic="/keyboard/keypress">
        <match field="data">16777235</match>  <!-- 16777235 = up arrow -->
      </input>
      <output type="ignition.msgs.Double"
          topic="/model/my_robot/joint/tilt_joint/cmd_vel">
        data: -0.5  <!-- look up a bit; negative for your joint if needed -->
      </output>
    </plugin>

    <!-- Tilt DOWN with down arrow -->
    <plugin
      filename="ignition-gazebo-triggered-publisher-system"
      name="ignition::gazebo::systems::TriggeredPublisher">
      <input type="ignition.msgs.Int32" topic="/keyboard/keypress">
        <match field="data">16777237</match>  <!-- 16777237 = down arrow -->
      </input>
      <output type="ignition.msgs.Double"
          topic="/model/my_robot/joint/tilt_joint/cmd_vel">
        data: 0.5
      </output>
    </plugin>

    <!-- Zoom IN with 'z' -->
    <plugin
      filename="ignition-gazebo-triggered-publisher-system"
      name="ignition::gazebo::systems::TriggeredPublisher">
      <input type="ignition.msgs.Int32" topic="/keyboard/keypress">
        <match field="data">90</match>  <!-- 'Z' keycode -->
      </input>
      <output type="ignition.msgs.Double"
          topic="/model/my_robot/joint/zoom_joint/cmd_vel">
        data: 0.20
      </output>
    </plugin>

    <!-- Zoom OUT with 'x' -->
    <plugin
      filename="ignition-gazebo-triggered-publisher-system"
      name="ignition::gazebo::systems::TriggeredPublisher">
      <input type="ignition.msgs.Int32" topic="/keyboard/keypress">
        <match field="data">88</match>  <!-- 'X' keycode -->
      </input>
      <output type="ignition.msgs.Double"
          topic="/model/my_robot/joint/zoom_joint/cmd_vel">
        data: -0.15
      </output>
    </plugin>


  </gazebo>

